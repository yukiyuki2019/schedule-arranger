extends layout

block content
  form(action="/schedules", method="post").my-3
    input(type="hidden", name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名(255文字まで)
      input(type="text", name="scheduleName" placeholder="予定" maxlength="255" autocomplete="off")#scheduleName.form-control
    div.form-group
      label(for="memo") メモ
      textarea(name="memo" maxlength="1000" placeholder="MEMO")#memo.form-control
    div.form-group
      label(for="candidates") 候補日程 (改行して複数入力してください)
      textarea(name="candidates" rows="4" placeholder="例 4月1日")#candidates.form-control
    button(type="submit").btn.btn-info 予定を作る